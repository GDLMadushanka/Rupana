    <title>Roopana</title>

    <!-- core CSS -->
    <link href="~/Content/landingpage/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/landingpage/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/landingpage/css/animate.min.css" rel="stylesheet">
    <link href="~/Content/landingpage/css/prettyPhoto.css" rel="stylesheet">
    <link href="~/Content/landingpage/css/main.css" rel="stylesheet">
    <link href="~/Content/landingpage/css/responsive.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="images/ico/favicon.ico">
