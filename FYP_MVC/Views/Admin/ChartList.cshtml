@model IEnumerable<FYP_MVC.Models.DAO.chart>

@{
    ViewBag.Title = "ChartList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ChartList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditChart", new { id = item.ID }) |
                @Html.ActionLink("Detail", "ChartDetails", new { id = item.ID }) |
                @Html.ActionLink("Delete", "DeleteChart", new { id = item.ID })
            </td>
        </tr>
    }

</table>
