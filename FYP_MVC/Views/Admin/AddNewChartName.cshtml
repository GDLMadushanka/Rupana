@model List<FYP_MVC.Models.DAO.DimensionTemplate>
@{
    ViewBag.Title = "AddNewChartName";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddNewChartName</h2>

@using (Html.BeginForm("AddNewChartNameVal", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add new Chart</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <h4>Dimension Count</h4>
    foreach (var dimList in Model)
    {
        <div class="form-group">
            <label class="col-md-2 control-label" for="dimCount">Dimension Count @(dimList.dimensionIndex + 1)</label>
            
            <div class="col-md-10">
                @Html.CheckBoxFor(m => m[dimList.dimensionIndex].isSelected, new { @checked = "checked" })

            </div>
        </div>
    }
    <div class="row">
        @foreach (var dimList in Model)
        {
            <div class="col-md-6">
                <h4>Dimension @(dimList.dimensionIndex + 1)</h4>
                @Html.HiddenFor(m => m[dimList.dimensionIndex].dimensionIndex, new { @Value = dimList.dimensionIndex })
                <div class="form-group">
                    @Html.LabelFor(m => dimList.isContineous, new { @class = "col-md-4 control-label" })
                    <div class="col-md-6">
                        @Html.CheckBoxFor(m => m[dimList.dimensionIndex].isContineous, new { @checked = "checked" })

                    </div>
                </div>
                <h5>Cardinality</h5>
                <div class="form-group">
                    @Html.LabelFor(m => dimList.cardinalityHigh, new { @class = "col-md-4 control-label" })
                    <div class="col-md-6">
                        @Html.CheckBoxFor(m => m[dimList.dimensionIndex].cardinalityHigh, new { @checked = "checked" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => dimList.cardinalityMedium, new { @class = "col-md-4 control-label" })
                    <div class="col-md-6">
                        @Html.CheckBoxFor(m => m[dimList.dimensionIndex].cardinalityMedium, new { @checked = "checked" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => dimList.cardinalityLow, new { @class = "col-md-4 control-label" })
                    <div class="col-md-6">
                        @Html.CheckBoxFor(m => m[dimList.dimensionIndex].cardinalityLow, new { @checked = "checked" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => dimList.cardinalityAny, new { @class = "col-md-4 control-label" })
                    <div class="col-md-6">
                        @Html.CheckBoxFor(m => m[dimList.dimensionIndex].cardinalityAny, new { @checked = "checked" })
                    </div>
                </div>

                <h5>Context</h5>
                <div class="form-group">
                    @Html.LabelFor(m => dimList.contextNumeric, new { @class = "col-md-4 control-label" })
                    <div class="col-md-6">
                        @Html.CheckBoxFor(m => m[dimList.dimensionIndex].contextNumeric, new { @checked = "checked" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => dimList.contextPercentage, new { @class = "col-md-4 control-label" })
                    <div class="col-md-6">
                        @Html.CheckBoxFor(m => m[dimList.dimensionIndex].contextPercentage, new { @checked = "checked" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => dimList.contextTimeseries, new { @class = "col-md-4 control-label" })
                    <div class="col-md-6">
                        @Html.CheckBoxFor(m => m[dimList.dimensionIndex].contextTimeseries, new { @checked = "checked" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => dimList.contextLocation, new { @class = "col-md-4 control-label" })
                    <div class="col-md-6">
                        @Html.CheckBoxFor(m => m[dimList.dimensionIndex].contextLocation, new { @checked = "checked" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => dimList.contextNominal, new { @class = "col-md-4 control-label" })
                    <div class="col-md-6">
                        @Html.CheckBoxFor(m => m[dimList.dimensionIndex].contextNominal, new { @checked = "checked" })
                    </div>
                </div>
                <hr />
                </div>
                }
            </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Next" />
            </div>
        </div>

        }
