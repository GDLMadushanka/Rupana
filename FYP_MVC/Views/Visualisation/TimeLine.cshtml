    <div class="row">
        <div class="col-xs-2">
            <div class="form-group">
                <select id="saveAs" class="selectpicker form-control">
                    <option value="png">png</option>
                    <option value="html">html</option>
                </select>
            </div>
        </div>
    </div>
    </br>
